<% include ../partials/header.ejs %> 

    <div class="cart-container">
        <div class="cart-wrapper">

            <div class="cart-note cart-section">
                <p>Please make sure the items in your cart are correct</p>
            </div>

            <div class="cart-list-cont cart-section">
                <ul class="cart-list"> 
                    <% if (locals.user.cart.items.length > 0) {%>
                    <% for (let i=0;i<locals.user.cart.items.length;i++) { %>
                        <li class="cart-item" data-idMain="<%= locals.user.cart.items[i].id %>" >
                            <img src="../<%= locals.user.cart.items[i].img %>" style="height:80px; width:80px" alt="">
                            <div class="cart-item-details">

                                <div class="cart-main">
                                        <h3 class="cart-item-title"><%= locals.user.cart.items[i].title %></h2>
                                        <i class="fa fa-times-circle" aria-hidden="true" id="x" data-id="<%= locals.user.cart.items[i].id %>"></i>   
                                </div>
                                    
                                <div class="cart-variables">
                                        <div class="qty-dropdown">
                                            <span>Qty: </span>
                                            <select data-qty="<%= locals.user.cart.items[i].total %>"  name="Qty" id="<%= locals.user.cart.items[i].id %>" class="cart-item-var">
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                                <option value="5">5</option>
                                                <option value="6">6</option>
                                                <option value="7">7</option>
                                                <option value="8">8</option>
                                                <option value="9">9</option>
                                                <option value="10">10</option>
                                            </select>
                                        </div>
                                        

                                        <!-- <var class="cart-item-var">Qty: <span class="qty"><%= locals.user.cart.items[i].total %></span></var> -->
                                        <var class="cart-item-var">Price: $<span class="price"><%= locals.user.cart.items[i].price %></span></var>
                                </div>
                            </div>
                        </li>
                    <% } %>                 
                </ul>
                <% } else { %>
                 <h2 style="color:red">Your cart is empty. it's time to fill it up!</h2>   
                <% } %>
            </div>

            <div class="totals-cont cart-section">
                <var class="total-item">Tax: $0.00</var>
                <var class="total-item">Total Price: $<span class="price"><%= locals.user.cart.totalPrice %></span></var>
            </div>

        </div>
    </div>

    <script src="../cart/cart-math.js"></script>
<% include ../partials/footer.ejs %>